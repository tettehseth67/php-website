RewriteEngine On

# Redirect to HTTPS (if using SSL)
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirect only if accessing base admin/student/teacher URLs (not subpages)
RewriteCond %{REQUEST_URI} ^/php-website/admin/$ [NC]
RewriteRule ^ admin/dashboard.php [L,QSA]

RewriteCond %{REQUEST_URI} ^/php-website/student/$ [NC]
RewriteRule ^ student/dashboard.php [L,QSA]

RewriteCond %{REQUEST_URI} ^/php-website/teacher/$ [NC]
RewriteRule ^ teacher/dashboard.php [L,QSA]

# Redirect to respective subdomains based on the user role stored in session
RewriteCond %{HTTP_HOST} ^(student|teacher|admin)\.yourdomain\.com$ [NC]
RewriteCond %{REQUEST_URI} ^/php-website/$
RewriteRule ^$ /php-website/%1/dashboard.php [L,QSA]

# Exclude login/logout/register pages from being rewritten
RewriteCond %{REQUEST_URI} !^/php-website/login.php$
RewriteCond %{REQUEST_URI} !^/php-website/logout.php$
RewriteCond %{REQUEST_URI} !^/php-website/register.php$
RewriteCond %{REQUEST_URI} !^/php-website/admin/.*$ [NC]  # Allow admin subpages
RewriteCond %{REQUEST_URI} !^/php-website/student/.*$ [NC] # Allow student subpages
RewriteCond %{REQUEST_URI} !^/php-website/teacher/.*$ [NC] # Allow teacher subpages
RewriteRule ^(.+)$ index.php?url=$1 [QSA,L]

# Disable Directory Browsing
Options -Indexes

# Enable Caching for Static Resources
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
</IfModule>
